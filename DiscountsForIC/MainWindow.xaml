<Window x:Class="DiscountsForIC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiscountsForIC"
        mc:Ignorable="d"
        Title="Управление скидками для страховых компаний" 
        Width="1100" 
        Height="600" 
        Background="#FFF0F0F0" 
        WindowStartupLocation="CenterScreen" 
        WindowState="Normal"
        Icon="Media/icon.ico">
    <Window.Resources>
        <DataTemplate x:Key="ArrowUp">
            <DockPanel>
                <TextBlock HorizontalAlignment="Center" Text="{Binding}" />
                <Path VerticalAlignment="Center" Fill="Black" Data="M 5,5 15,5 10,0 5,5" />
            </DockPanel>
        </DataTemplate>
        
        <DataTemplate x:Key="ArrowDown">
            <DockPanel>
                <TextBlock HorizontalAlignment="Center" Text="{Binding}" />
                <Path VerticalAlignment="Center" Fill="Black" Data="M 5,0 10,5 15,0 5,0" />
            </DockPanel>
        </DataTemplate>

        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:BoolToEnableConverter x:Key="BoolToEnableConverter"/>
        <local:PopValidationRule x:Key="PopValidationRule"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" MinHeight="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Background="#FFF0F0F0" 
                    SelectionChanged="TabControl_SelectionChanged"
                    x:Name="TabControlSearch">
            <TabItem Header="Поиск по названию СК / № договора">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Наименование СК / договор №:" 
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" 
                                 Margin="10,0"
                                 x:Name="TextBoxSearch"
                                 KeyDown="TextBoxSearch_KeyDown"
                                 TabIndex="1"
                                 VerticalAlignment="Center"/>
                        
                        <Button Grid.Column="2"
                                Width="100"
                                Height="40"
                                x:Name="ButtonSearch"
                                Click="ButtonSearch_Click" 
                                VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Media/VSO_Search_16x.png" Stretch="None"/>
                                <TextBlock Text="Поиск" Margin="10,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <TextBlock Grid.Row="1" 
                               Text="Результаты поиска:" 
                               Margin="10,10,10,0" 
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                    
                    <Button Grid.Row="1" 
                            HorizontalAlignment="Right" 
                            Margin="10,10,10,0" 
                            Width="100" 
                            Height="40"
                            x:Name="ButtonSelectAllIC" 
                            IsEnabled="False"
                            Click="ButtonSelectAllIC_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Stretch="None" Source="Media/SelectAll_16x.png"/>
                            <TextBlock Text="Выделить&#x0a;все" Margin="10,0,0,0" TextAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <ListView Grid.Row="2"
                              Margin="10,5,10,10"
                              x:Name="ListViewSearchResults" 
                              SelectionChanged="ListViewSearchResults_SelectionChanged"
                              ItemsSource="{Binding ItemsIC}"
                              GridViewColumnHeader.Click="ListViewHeader_Click">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="  Филиал  " DisplayMemberBinding="{Binding SHORTNAME}"/>
                                <GridViewColumn Header="  Наименование СК  " DisplayMemberBinding="{Binding JNAME}"/>
                                <GridViewColumn Header="  Договор №  " DisplayMemberBinding="{Binding AGNUM}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Поиск по дате">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid VerticalAlignment="Bottom" HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Дата начала:" 
                                   VerticalAlignment="Center"/>

                        <DatePicker Grid.Column="1"
                                    Margin="10,0,0,0"
                                    x:Name="DatePickerDateBegin"
                                    VerticalAlignment="Center"/>

                        <CheckBox Content="Без учета даты окончания" 
                                  Grid.Column="2"
                                  Margin="20,0,0,0"
                                  x:Name="ComboBoxSelectDateEnd"
                                  VerticalAlignment="Center"
                                  IsChecked="True"
                                  Checked="ComboBoxSelectDateEnd_Checked"
                                  Unchecked="ComboBoxSelectDateEnd_Unchecked"/>

                        <TextBlock Text="Дата окончания:" 
                                    Margin="20,0,0,0"
                                   Grid.Column="3"
                                   VerticalAlignment="Center"
                                   x:Name="TextBlockDateEnd"
                                   IsEnabled="False"/>

                        <DatePicker Grid.Column="4"
                                    Margin="10,0,0,0"
                                    x:Name="DatePickerEnd"
                                    IsEnabled="False"
                                    VerticalAlignment="Center"/>
                    </Grid>
                    
                    <Button Grid.Row="4" 
                            Grid.Column="1" 
                            Grid.ColumnSpan="2"
                            Width="100"
                            Height="40"
                            Margin="0,10,0,0"
                            x:Name="ButtonSearchByDate"
                            Click="ButtonSearchByDate_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Media/VSO_Search_16x.png" Stretch="None"/>
                            <TextBlock Text="Поиск" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </TabItem>
        </TabControl>

        <GridSplitter Grid.Row="1" 
                      VerticalAlignment="Top" 
                      HorizontalAlignment="Stretch"
                      Height="2" 
                      Background="#FFC8C8C8" 
                      Margin="10,0" 
                      ResizeDirection="Rows"
                      ResizeBehavior="PreviousAndNext"/>

        <TextBlock Grid.Row="1" 
                   Text="Информация по скидкам:" 
                   Margin="10,10,10,0" 
                   TextAlignment="Center"
                   VerticalAlignment="Center"/>
        
        <Button Grid.Row="1" 
                HorizontalAlignment="Right" 
                Margin="10,10,10,0" 
                Width="100" 
                Height="40"
                x:Name="ButtonSelectAllDiscounts" 
                IsEnabled="False"
                Click="ButtonSelectAllDiscounts_Click">
            <StackPanel Orientation="Horizontal">
                <Image Stretch="None" Source="Media/SelectAll_16x.png"/>
                <TextBlock Text="Выделить&#x0a;все" Margin="10,0,0,0" TextAlignment="Center"/>
            </StackPanel>
        </Button>

        <ListView Grid.Row="2" 
                  Margin="10,5,10,10" 
                  x:Name="ListViewDiscounts" 
                  ItemsSource="{Binding ItemsDiscount}" 
                  SelectionChanged="ListViewDiscounts_SelectionChanged"
                  HorizontalContentAlignment="Stretch">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn>
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="Филиал / Наименование СК / Договор №" Margin="5,0"/>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding Contract}" 
                                          SelectedItem="{Binding ContractPreview}"
                                          IsEnabled="{Binding Path=Contract, Converter={StaticResource BoolToEnableConverter}}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn>
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="Дата начала" Margin="5,0"/>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <DatePicker SelectedDate="{Binding BEGINDATE}" 
                                            HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn>
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=ComboBoxEndlessIsChecked}"
                                          Content="Бессрочная"
                                          HorizontalAlignment="Center" 
                                          Margin="5,0"
                                          x:Name="CheckBoxEndless"
                                          Click="CheckBoxEndless_Click"/>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding ENDLESS}" 
                                          HorizontalAlignment="Center" 
                                          Margin="5,0" Click="CheckBox_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn>
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="Дата окончания" Margin="5,0"/>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <DatePicker SelectedDate="{Binding ENDDATE}" 
                                            HorizontalAlignment="Center">
                                    <DatePicker.Visibility>
                                        <Binding Path="ENDLESS" 
                                                 Converter="{StaticResource BoolToVisibilityConverter}" 
                                                 ConverterParameter="invert"/>
                                    </DatePicker.Visibility>
                                </DatePicker>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
<!--
                    <GridViewColumn>
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=ComboBoxAmountRelationIsChecked}" 
                                          Content="Зависит от суммы" 
                                          HorizontalAlignment="Center" 
                                          Margin="5,0"
                                          x:Name="CheckBoxAmountRelation"
                                          Click="CheckBoxAmountRelation_Click"/>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding AMOUNTRELATION}" 
                                          HorizontalAlignment="Center" Click="CheckBox_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>


                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
-->
                    <GridViewColumn>
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="Размер скидки, %" Margin="5,0"/>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox TextAlignment="Right" 
                                         HorizontalAlignment="Stretch"
                                         PreviewLostKeyboardFocus="TextBox_PreviewLostKeyboardFocus" 
                                         PreviewTextInput="TextBox_PreviewTextInput"
                                         DataObject.Pasting="TextBox_Pasting">
                                    <Binding 
                                        Path="DISCOUNT"
                                        UpdateSourceTrigger="LostFocus"
                                        StringFormat="{}{0:#}">
                                        <Binding.ValidationRules>
                                            <local:PopValidationRule/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn>
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="Комментарий" Margin="5,0"/>
                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding COMMENT}" 
                                         HorizontalAlignment="Stretch"
                                         MinWidth="300"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Orientation="Horizontal" Grid.Column="1" 
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Width="100" 
                        x:Name="ButtonAdd"
                        IsEnabled="False"
                        Click="ButtonAdd_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Media/VSO_Add_16x.png" Stretch="None"/>
                        <TextBlock Text="Добавить" Margin="10,0,0,0"/>
                    </StackPanel>
                </Button>

                <Button Margin="20,0,0,0" 
                        Width="100" 
                        x:Name="ButtonApplyChanges" 
                        IsEnabled="False" 
                        Click="ButtonApplyChanges_Click" 
                        Background="LightGreen">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Media/VSO_Save_16x.png" Stretch="None"/>
                        <TextBlock Text="Сохранить&#x0a;изменения" Margin="10,0,0,0" TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Margin="20,0,0,0" 
                        Width="100" 
                        x:Name="ButtonDelete"
                        IsEnabled="False"
                        Click="ButtonDelete_Click"
                        Background="#FFFF8181">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Media/VSO_Remove_16x.png" Stretch="None"/>
                        <TextBlock Text="Удалить" Margin="10,0,0,0"/>
                    </StackPanel>
                </Button>

                <Button Margin="20,0,0,0" 
                        IsEnabled="False" 
                        x:Name="ButtonExportToExcel"
                        Width="100" 
                        Height="40"
                        HorizontalContentAlignment="Center"
                        Click="ButtonExportToExcel_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Media/ExcelWorksheetView_16x.png" Stretch="None"/>
                        <TextBlock Text="Выгрузка&#xA;в Excel" Margin="10,0,0,0" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <Image Source="Media/ButterflyClear.png" Grid.Column="2"
               StretchDirection="DownOnly" MaxWidth="80" MaxHeight="80"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Right"/>
        </Grid>

        <Grid Grid.Row="4" Height="10" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Image Source="Media/BottomLineTemplate.png" Stretch="UniformToFill" />
            <Image Grid.Column="1" Source="Media/BottomLineContinuesClear.png"/>
        </Grid>
    </Grid>
</Window>

<Window x:Class="DiscountsForIC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiscountsForIC"
        mc:Ignorable="d"
        Title="MainWindow" Width="1100" Height="500" Background="#FFF0F0F0" WindowStartupLocation="CenterScreen" MinWidth="1100" MinHeight="500">
    <Window.Resources>
        <DataTemplate x:Key="ArrowUp">
            <DockPanel>
                <TextBlock HorizontalAlignment="Center" Text="{Binding}" />
                <Path VerticalAlignment="Center" Fill="Black" Data="M 5,5 15,5 10,0 5,5" />
            </DockPanel>
        </DataTemplate>
        <DataTemplate x:Key="ArrowDown">
            <DockPanel>
                <TextBlock HorizontalAlignment="Center" Text="{Binding}" />
                <Path VerticalAlignment="Center" Fill="Black" Data="M 5,0 10,5 15,0 5,0" />
            </DockPanel>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="315"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Результаты поиска:" Margin="10,10,10,0" TextAlignment="Center"/>

        <ListView Grid.Row="1" Margin="10,5,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="  Наименование организации  "/>
                    <GridViewColumn Header="  Номер договора  "/>
                </GridView>
            </ListView.View>
        </ListView>

        <TextBlock Grid.Row="2" Text="Наименование организации / номер договора:" Margin="10,10,10,0" TextAlignment="Center"/>
        <TextBox Grid.Row="3" Margin="10,0,10,10"/>
        <Button Grid.Row="4" Content="Поиск" Margin="10,0,10,10" Width="80"/>

        <GridSplitter Grid.RowSpan="5" HorizontalAlignment="Right" Width="1" Background="#FFC8C8C8" Margin="0,10"/>

        <TextBlock Grid.Row="0" Grid.Column="1" Text="Информация по скидкам для выбранного договора:" Margin="10,10,10,0" TextAlignment="Center"/>

        <Grid Grid.Row="2" Grid.RowSpan="3" Grid.Column="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image Source="ButterflyClear.png" Grid.Column="2"
               StretchDirection="DownOnly" MaxWidth="80" MaxHeight="80"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Right"/>
        </Grid>
        
        <ListView Grid.Row="1" Grid.Column="1" Margin="10,5,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="  Бессрочная  "/>
                    <GridViewColumn Header="  Дата начала  "/>
                    <GridViewColumn Header="  Дата окончания  "/>
                    <GridViewColumn Header="  Зависит от суммы  "/>
                    <GridViewColumn Header="  Сумма от  "/>
                    <GridViewColumn Header="  Сумма до  "/>
                    <GridViewColumn Header="  Размер скидки, %  "/>
                    <GridViewColumn Header="  Комментарий  "/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.RowSpan="3" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Добавить" Margin="0,0,10,0" Width="80"/>
            <Button Content="Удалить" Margin="10,0,0,0" Width="80"/>
            <Button Content="Сохранить изменения" Margin="40,0,0,0" Width="180"/>
        </StackPanel>

        <Grid Grid.Row="7" Grid.ColumnSpan="2" Height="10" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Image Source="BottomLineTemplate.png" Stretch="UniformToFill" />
            <Image Grid.Column="1" Source="BottomLineContinuesClear.png"/>
        </Grid>
    </Grid>
</Window>
